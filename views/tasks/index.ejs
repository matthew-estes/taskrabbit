<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.min.css"
    />
    <title>Tasks</title>
    <style>
      body {
        font-family: "Roboto", Arial, sans-serif;
        display: flex;
        flex-direction: column;
      }
      h1,
      p {
        text-align: center;
      }
      h1 {
        margin-top: 3%;
      }
      p {
        margin: 0;
      }

      table thead {
        background-color: #0077cc;
        text-align: center;
        color: #fff;
      }

      nav {
        text-align: center;
      }

      nav a {
        padding: 1rem;
      }
    </style>
  </head>
  <body onload="greeting()">
    <nav>
      <a href="/users/<%=user._id%>/tasks/new">Add a New Task</a>
      <a href="/auth/reset">Reset Your Password</a>
      <a href="/auth/sign-out">Sign Out</a>
    </nav>
    <h1 id="greeting"></h1>
    <p>Here are your Current Tasks:</p>
    <table id="taskTable">
      <thead>
        <tr>
          <th>Name</th>
          <th>Category</th>
          <th>High Priority</th>
          <th>Due Date</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% tasks.forEach(task => { %>
        <tr>
          <td>
            <a href="/users/<%= user._id %>/tasks/<%= task._id %>"
              ><%= task.name %>
            </a>
          </td>
          <td><%= task.category %></td>
          <td><%= task.isHighPriority ? 'Yes' : 'No' %></td>
          <td>
            <%= new Date(task.dueDate).toLocaleDateString('en-US', { month:
            'short', day: 'numeric', timeZone: 'UTC' }) %>
          </td>
          <td><%= task.status %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <script>
      function greeting() {
        const greetingElement = document.getElementById("greeting");
        const now = new Date();
        const hour = now.getHours();
        let greeting;
        if (hour < 12) {
          greeting = "Good Morning";
        } else if (hour < 18) {
          greeting = "Good Afternoon";
        } else {
          greeting = "Good Evening";
        }
        greetingElement.textContent = greeting + ", <%= user.username%>";
      }
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script
      type="text/javascript"
      charset="utf8"
      src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js"
    ></script>
    <script>
      $(document).ready(function () {
        $("#taskTable").DataTable();
      });
    </script>
  </body>
</html>
