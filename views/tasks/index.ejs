<!-- views/applications/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>High Priority Tasks</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Your High Priority Tasks</h1>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Category</th>
          <th>Due Date</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% tasks.forEach(task => { %>
        <tr>
          <td><%= task.name %></td>
          <td><%= task.category %></td>
          <td><%= task.dueDate %></td>
          <td><%= task.status %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <a href="/users/<%=user._id%>/tasks/new">Add a New Task</a>
  </body>
</html>
